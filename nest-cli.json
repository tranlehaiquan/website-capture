{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/web-capture/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/web-capture/tsconfig.app.json",
    "plugins": ["@nestjs/swagger"]
  },
  "monorepo": true,
  "root": "apps/web-capture",
  "projects": {
    "web-capture": {
      "type": "application",
      "root": "apps/web-capture",
      "entryFile": "main",
      "sourceRoot": "apps/web-capture/src",
      "compilerOptions": {
        "tsConfigPath": "apps/web-capture/tsconfig.app.json"
      }
    },
    "drizzle-db": {
      "type": "library",
      "root": "libs/drizzle-db",
      "entryFile": "index",
      "sourceRoot": "libs/drizzle-db/src",
      "compilerOptions": {
        "tsConfigPath": "libs/drizzle-db/tsconfig.lib.json"
      }
    }
  }
}